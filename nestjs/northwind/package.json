{
  "name": "northwind",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rm -rdf dist",
    "postbuild": "mkdir -p dist/libs/proto && cp -r libs/proto dist/libs",
    "build": "npm run clean && npm run build:all",
    "build:weatherapi": "nest build weatherapi",
    "build:northwindapi": "nest build northwindapi",
    "build:northwindmcp": "nest build northwindmcp",
    "build:apigateway": "nest build apigateway && npm run postbuild",
    "build:oauthapi": "nest build oauthapi",
    "build:oauthapp": "nest build oauthapp",
    "build:azureapi": "nest build azureapi && npm run postbuild",
    "build:all": "npm run build:apigateway && npm run build:northwindapi && npm run build:azureapi",
    "build:tmp": "npm run build:apigateway && npm run build:weatherapi && npm run build:northwindapi && npm run build:oauthapp && npm run build:oauthapi && npm run build:northwindmcp",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "concurrently -c \"cyan.bold,red.bold,blue.bold,indigo.bold,yellow.bold,green.bold\" \"npm:start-prod:*\"",
    "start-prod1:oauthapi": "NODE_ENV=production nest start oauthapi",
    "start-prod1:oauthapp": "NODE_ENV=production nest start oauthapp",
    "start-prod:apigateway": "NODE_ENV=production nest start apigateway",
    "start-prod:weatherapi": "NODE_ENV=production node dist/apps/weatherapi/main.js",
    "start-prod:northwindapi": "NODE_ENV=production node dist/apps/northwindapi/main",
    "start-prod:azureapi": "NODE_ENV=production node dist/apps/azureapi/main",
    "start-dev": "concurrently -c \"cyan.bold,red.bold,blue.bold,indigo.bold,yellow.bold,green.bold\" \"npm:start-dev:*\"",
    "start-dev1:oauthapi": "npx ts-node-dev -r tsconfig-paths/register apps/oauthapi/src/main.ts",
    "start-dev1:oauthapp": "npx ts-node-dev -r tsconfig-paths/register apps/oauthapp/src/main.ts",
    "start-dev:apigateway": "npx ts-node-dev -r tsconfig-paths/register apps/apigateway/src/main.ts",
    "start-dev:weatherapi": "npx ts-node-dev -r tsconfig-paths/register apps/weatherapi/src/main.ts",
    "start-dev:northwindapi": "npx ts-node-dev -r tsconfig-paths/register apps/northwindapi/src/main.ts",
    "start-dev:azureapi": "npx ts-node-dev -r tsconfig-paths/register apps/azureapi/src/main.ts",
    "start-dev1:northwindmcp": "npx ts-node-dev -r tsconfig-paths/register apps/northwindmcp/src/main.ts",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/northwind/test/jest-e2e.json",
    "migration-generate": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d ./apps/northwindapi/src/config/typeorm.config.ts ./apps/northwindapi/src/database/migrations/migration",
    "migration-create": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create -d ./apps/northwindapi/src/config/typeorm.config.ts ./apps/northwindapi/src/database/migrations/migration",
    "migration-run": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./apps/northwindapi/src/config/typeorm.config.ts",
    "migration-revert": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ./apps/northwindapi/src/config/typeorm.config.ts",
    "seed": "ts-node -r tsconfig-paths/register ./apps/northwindapi/src/database/seed/index.ts"
  },
  "dependencies": {
    "@azure/identity": "^4.9.1",
    "@azure/keyvault-secrets": "^4.9.0",
    "@azure/msal-node": "^3.5.2",
    "@grpc/grpc-js": "^1.13.3",
    "@grpc/proto-loader": "^0.7.15",
    "@modelcontextprotocol/sdk": "^1.11.1",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^11.1.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.8.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "eventsource": "^3.0.6",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.1",
    "opossum": "^8.4.0",
    "pg": "^8.15.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tailwindcss": "^4.1.4",
    "ts-proto": "^2.7.0",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@tailwindcss/cli": "^4.1.4",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@bpm/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@bpm/data(|/.*)$": "<rootDir>/libs/data/src/$1"
    }
  }
}
